<% layout('/layouts/boilerplate') -%>

    <div class="w-full h-full p-8 ">
    <h3>Edit list :</h3>
    <form action="/listings/<%= list._id%>?_method=PUT" method="post">
        <label for="title">Title</label><br>
        <input type="text" name="listing[title]" value="<%=list.title%>" class="border-2 h-10 w-[98%] rounded-md px-2 mb-3" id="title">
        <br>

        <label for="description">Description</label><br>
        <textarea type="text" name="listing[description]" id="description" class="border-2 h-20 w-[98%] rounded-md px-2 mb-3"><%=list.description%></textarea>
        <br>

        <label for="price">Price</label>
        <label for="country" class="absolute left-1/2">Country</label><br>
        <input type="number" name="listing[price]"  value="<%=list.price%>" id="price" class="border-2 h-10 w-[46%] rounded-md px-2 mb-3"">
        <input type="text" name="listing[location]"  value="<%=list.location%>" id="country" class="border-2 h-10 w-[46%] absolute left-1/2 rounded-md px-2 mb-3">
        <br>

        <label for="location">Location</label><br>
        <input type="text" name="listing[country]"  value="<%=list.country%>" id="location" class="border-2 w-[98%] h-10 rounded-[0.2rem] px-2 mb-3">
        <br>

        <button class="bg-red-600 text-white rounded-lg w-16 h-7 border-none hover:bg-red-500">Edit</button>
    </form>
    </div>


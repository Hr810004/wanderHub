<% layout('/layouts/boilerplate') -%>

<style>
  body, html {
    margin: 0;
    padding: 0;
  }

  .bg-with-overlay {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)),
      url('https://images.unsplash.com/photo-1512917774080-9991f1c4c750?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fHx8&auto=format&fit=crop&w=2070&q=80');
    background-size: cover;
    background-position: center;
    min-height: 100vh;
    position: relative;
    padding-top: 100px;   /* Gap from navbar */
    padding-bottom: 100px; /* Gap before footer */
    display: flex;
    justify-content: center;
    align-items: flex-start;
  }

  .form-container {
    background-color: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(4px);
    padding: 2rem;
    border-radius: 10px;
    border: 1px solid rgb(179, 173, 173);
    width: 50%;
    max-width: 700px;
    animation: fadeSlideUp 0.6s ease-out;
    position: relative;
    z-index: 1;
  }

  @keyframes fadeSlideUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  form {
    display: grid;
    gap: 16px;
    margin-top: 20px;
  }

  form label {
    font-weight: bold;
    font-size: 1rem;
    margin-bottom: 8px;
    display: block;
  }

  form input, form textarea {
    padding: 10px;
    border: 2px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
    width: 100%;
    box-sizing: border-box;
  }

  form input[type="file"] {
    padding: 8px;
  }

  form textarea {
    resize: vertical;
    min-height: 120px;
  }

  .input-group {
    display: flex;
    gap: 10px;
  }

  .input-group input {
    width: 48%;
  }

  button {
    background-color: #dc2626;
    color: white;
    border: none;
    border-radius: 8px;
    padding: 12px 24px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
    width: 100%;
  }

  button:hover {
    background-color: #ef4444;
  }

  h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #1f2937;
    text-align: center;
  }

  .form-footer {
    margin-top: 20px;
    text-align: center;
  }

  .form-footer a {
    color: #dc2626;
    text-decoration: none;
    font-weight: bold;
  }

  .form-footer a:hover {
    text-decoration: underline;
  }
</style>

<div class="bg-with-overlay">
  <div class="form-container">
    <h3>Create New Listing</h3>

    <form action="/listings" method="post" enctype="multipart/form-data">
      <label for="title">Title</label>
      <input required type="text" name="listing[title]" id="title" placeholder="Enter title">

      <label for="description">Description</label>
      <textarea required name="listing[description]" id="description" placeholder="Enter description" rows="4"></textarea>

      <label for="image">Upload Image</label>
      <input required type="file" name="listing[image]" id="image">

      <div class="input-group">
        <div class="input-container">
          <label for="price">Price</label>
          <input required type="text" name="listing[price]" id="price" placeholder="Enter price">
        </div>

        <div class="input-container">
          <label for="country">Country</label>
          <input required type="text" name="listing[country]" id="country" placeholder="Enter country">
        </div>
      </div>

      <label for="location">Location</label>
      <input required type="text" name="listing[location]" id="location" placeholder="Enter location">

      <button type="submit">Add Listing</button>
    </form>

    <div class="form-footer">
      <p>Already have an account? <a href="/login">Sign in</a></p>
    </div>
  </div>
</div>

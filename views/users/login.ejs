<% layout('/layouts/boilerplate') -%>
<div class="min-h-[80vh] flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="min-w-[60vw] border rounded-lg" style="min-width: 35vw; margin-top: 5rem;">
        <div>
            <h1 class="text-center text-2xl font-bold text-gray-900">
                Welcome back
            </h1>
            <p class="mt-2 text-center text-sm text-gray-600">
                Please sign in to continue
            </p>
        </div>
        <form action="/login" method="POST" class="space-y-4 " style="width: 80%;; margin-top: 2.5rem; margin-left: 3.5rem;">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700">Username</label>
                <input required type="text" name="username" id="username" 
                    class="mt-1 mb-4 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 
                    focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" 
                    placeholder="Enter your username">
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
                <input required type="password" name="password" id="password" 
                    class="mt-1 mb-4 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 
                    focus:outline-none focus:ring-red-500 focus:border-red-500 sm:text-sm" 
                    placeholder="Enter your password">
            </div>

            <div class="flex justify-center items-center">
                <button type="submit" 
                    class="w-[40%] flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    Sign in
                </button>
            </div>
        </form>
        <div class="text-center">
            <p class="text-sm text-gray-600">
                Don't have an account? 
                <a href="/signup" class="font-medium text-red-600 hover:text-red-500">
                    Sign up
                </a>
            </p>
        </div>
    </div>
</div>